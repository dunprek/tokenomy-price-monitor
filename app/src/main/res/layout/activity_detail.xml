<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGreyish"
    tools:context="com.don.tokenomy.ui.detail.DetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingStart="-48dp"
            android:paddingEnd="0dp"
            android:text="@string/label_detail"
            android:textSize="@dimen/text_size_24" />


    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_size_16dp"
        app:cardCornerRadius="6dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMarketCode"
                style="@style/textDetailHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_16dp"
                tools:text="BRD/BTC" />

            <TextView
                android:id="@+id/tvMarketName"
                style="@style/textDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="BR291" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/margin_size_8dp"
                android:layout_marginBottom="@dimen/margin_size_8dp"
                android:background="@color/colorGrey" />

            <TextView
                style="@style/textDetailHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_16dp"
                android:text="@string/label_last_price_detail" />

            <TextView
                android:id="@+id/tvLastPrice"
                style="@style/textDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="0.000006570" />


            <TextView
                style="@style/textDetailHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_16dp"
                android:text="@string/label_24h_change" />

            <TextView
                android:id="@+id/tvTwoFour"
                style="@style/textDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="+4.6%" />

            <TextView
                style="@style/textDetailHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_16dp"
                android:text="@string/label_24h_high" />

            <TextView
                android:id="@+id/tvTwoFourHigh"
                style="@style/textDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="0.00006711" />

            <TextView
                style="@style/textDetailHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_16dp"
                android:text="@string/label_24h_low" />

            <TextView
                android:id="@+id/tvTwoFourLow"
                style="@style/textDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="0.00006711" />

            <TextView
                style="@style/textDetailHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_16dp"
                android:text="@string/label_24h_volume_detail" />

            <TextView
                android:id="@+id/tvVolume"
                style="@style/textDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_size_16dp"
                tools:text="101,300 brd" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
