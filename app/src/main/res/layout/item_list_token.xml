<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:foreground="?android:attr/selectableItemBackground"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/margin_size_8dp"
    tools:ignore="UnusedAttribute">

    <ImageView
        android:id="@+id/ivStar"
        android:layout_width="@dimen/margin_size_18dp"
        android:layout_height="@dimen/margin_size_18dp"
        android:background="@drawable/ic_star_default"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tvMarket"
        style="@style/textItemList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        tools:text="LRC/BTC" />

    <TextView
        android:id="@+id/tvLastPrice"
        style="@style/textItemList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        tools:text="0.00003425" />


    <TextView
        android:id="@+id/tvTwoFour"
        style="@style/textItemList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        tools:text="200 BTC" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/ivPercentDown"
            android:layout_width="@dimen/margin_size_10dp"
            android:layout_height="@dimen/margin_size_10dp"
            android:background="@drawable/ic_down_arrow_red"
            android:layout_marginEnd="@dimen/margin_size_4dp"
            android:rotation="-45"
            tools:ignore="ContentDescription" />


        <ImageView
            android:id="@+id/ivPercentUp"
            android:layout_width="@dimen/margin_size_10dp"
            android:layout_height="@dimen/margin_size_10dp"
            android:layout_marginEnd="@dimen/margin_size_4dp"
            android:background="@drawable/ic_down_arrow_green"
            android:rotation="-135"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tvPercent"
            style="@style/textItemList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="17.5 %" />

    </LinearLayout>


</LinearLayout>